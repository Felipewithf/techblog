{{#each home_feed_posts as |post| }}

<div class="row align-center mb-5">
  <div class="col-md-6">
    <!-- Call the helper function with triple brackets to render the span as HTML -->
    <h2>{{post.title}}</h2>
  </div>
  <div class="col-md-6">
    <h3>written by: {{post.user.username}}</h3>
  </div>
</div>

{{/each }}